<div>
    <h1>Products</h1>
    {{#if products}}
        {{#each products}}
            <div>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>{{this.price}}</p>
                <a href="/{{this._id}}">Ir al producto</a>
            </div>
        {{/each}}
    {{else}}
        <h2>No se encontraron productos</h2>
    {{/if}}
</div>